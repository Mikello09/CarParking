<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:background="@drawable/round_dialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/cerrarImagenLayout"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cerrarIcono"
                android:id="@+id/cerrarImagenIcono"
                android:background="@drawable/ripple_text"
                android:textSize="25dp"
                android:textColor="@color/rojo"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOTO"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="@color/gris"
            android:textSize="22dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="7dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/fotoDialog"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/cambiarFotoLayout"
            android:layout_alignParentBottom="true"
            android:gravity="right|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAMBIAR DE FOTO"
                android:background="@drawable/ripple_text"
                android:id="@+id/cambiarFotoTexto"
                android:layout_marginRight="10dp"
                android:textColor="@color/azul"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>